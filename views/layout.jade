doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="")
    meta(name="author", content="Martin Reynolds")
    link(rel="shortcut icon",href="/images/favicon.ico")

    title= title

    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    a.sr-only(href="#content") Skip to main content
    header#top(class="navbar navbar-default navbar-static-top", role="banner")
      .container-fluid
        .navbar-header
          // Brand and toggle grouped for better responsive display
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#fixed-navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") SSRS 2 Insights

        // Navbar content for toggleing
        -var menu = {'/': '<span class="glyphicon glyphicon-home"></span> Home'};

        nav#fixed-navbar(class="collapse navbar-collapse hidden-print", role="navigation")
          ul(class="nav navbar-nav")
            each val, key in menu
              if active === key
                li.active
                  a(href=key)!= val
              else
                li
                  a(href=key)!= val
        // /.navbar-collapse
      // /.container

    // Begin page content
    #content.container
      block content

    footer#footer
      .container
        p.text-muted Advanced Computer Software (c) 2014

    // Bootstrap core JavaScript ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    block scripts
